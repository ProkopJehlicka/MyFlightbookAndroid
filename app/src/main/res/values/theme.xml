<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <color name="custom_theme_color">#999999</color>
    <color name="splash_background">#263238</color>

    <style name="MFBDialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowBackground">@color/custom_theme_color</item>
        <item name="android:colorBackground">@color/colorDialog</item>
        <item name="android:background">@color/colorDialog</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">5sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:alertDialogStyle">@style/MFBCustomProgressStyle</item>
    </style>

    <style name="MFBProgressStyle" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:alertDialogStyle">@style/MFBCustomProgressStyle</item>
        <item name="android:colorBackground">@color/colorDialog</item>
        <item name="android:background">@color/colorDialog</item>
        <item name="android:textColorPrimary">@color/progressTextColor</item>
        <item name="android:textColor">@color/progressTextColor</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MFBCustomProgressStyle">
        <item name="android:bottomBright">@color/colorDialog</item>
        <item name="android:bottomDark">@color/colorDialog</item>
        <item name="android:bottomMedium">@color/colorDialog</item>
        <item name="android:centerBright">@color/colorDialog</item>
        <item name="android:centerDark">@color/colorDialog</item>
        <item name="android:centerMedium">@color/colorDialog</item>
        <item name="android:fullBright">@color/colorDialog</item>
        <item name="android:fullDark">@color/colorDialog</item>
        <item name="android:topBright">@color/colorDialog</item>
        <item name="android:topDark">@color/colorDialog</item>
    </style>

    <style name="DividerBar">
        <item name="android:colorBackground">@color/divider_background</item>
        <item name="android:background">@color/divider_background</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textColor">@color/divider_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">5dip</item>
        <item name="android:layout_marginBottom">2dip</item>
    </style>

    <style name="DateButton">
        <item name="android:padding">6dip</item>
        <item name="android:textSize">8pt</item>
        <item name="android:layout_margin">6dip</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/roundedborder</item>
    </style>

    <!-- Base application theme. -->
    <style name="MFBTheme" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:background">@color/colorBackground</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:colorBackground">@color/colorBackground</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        // Set the splash screen background, animated icon, and animation duration.
        <item name="windowSplashScreenBackground">@color/splash_background</item>

        // Use windowSplashScreenAnimatedIcon to add either a drawable or an
        // animated drawable. One of these is required.
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">200</item>  # Required for
        # animated icons

        // Set the theme of the Activity that directly follows your splash screen.
        <item name="postSplashScreenTheme">@style/MFBTheme</item>  # Required.
    </style>
</resources>
