<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="fill_parent" android:layout_height="fill_parent">
	<LinearLayout 
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="vertical" android:padding="5dp">
		<TextView android:id="@+id/TextView01" android:text="@string/lblNewAircraftPromopt"
		android:layout_width="wrap_content" android:layout_height="wrap_content">
		</TextView>
		<TableLayout android:id="@+id/TableLayout01" android:padding="2sp"
			android:layout_width="wrap_content" android:layout_height="wrap_content">
			<TableRow android:id="@+id/tblrowAircraftInstanceType" android:layout_width="fill_parent" android:gravity="center_vertical"
				android:layout_height="wrap_content">
				<TextView android:text="@string/lblAircraftType" android:id="@+id/TextView02"
					android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
				<Spinner android:layout_width="wrap_content" android:paddingTop="2sp" android:paddingBottom="2sp"
					android:layout_height="wrap_content" android:id="@+id/spnAircraftType"></Spinner>
			</TableRow>
	
			<TableRow
			    android:id="@+id/tblrowAircraftModel"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:gravity="center_vertical" >
	
			    <TextView
			        android:id="@+id/TextView04"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/lblMakeModel" />
	
			    <Button
			        android:id="@+id/btnMakeModel"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:paddingBottom="2sp"
			        android:paddingTop="2sp" />
			</TableRow>
	
			<TableRow android:id="@+id/tblrowIsAnonymous" android:layout_width="fill_parent" android:gravity="center_vertical" 
				android:layout_height="wrap_content">
			    <CheckBox android:id="@+id/ckAnonymous" android:layout_width="fill_parent" android:text="@string/lblAnonymous" android:layout_span="2" android:layout_gravity="center_horizontal"></CheckBox>
	    	</TableRow>
			<TableRow android:id="@+id/tblrowTailnumber" android:layout_width="fill_parent" android:gravity="center_vertical"
				android:layout_height="wrap_content">
				<TextView android:text="@string/lblTail" android:id="@+id/TextView03"
					android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
				<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
					<EditText android:text="" android:id="@+id/txtTail"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:hint="@string/lblTail" android:inputType="textCapCharacters|textNoSuggestions">
					</EditText>
				</LinearLayout>
			</TableRow>
			
		</TableLayout>
		<TextView android:text="@string/lblAddMakes" android:id="@+id/txtAddMakesHint"
			android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
		<!-- Images -->
		<Gallery android:layout_width="fill_parent" android:layout_height="wrap_content" 
		android:id="@+id/galImages" android:spacing="4dip" >
		</Gallery>
	</LinearLayout>
</ScrollView>
