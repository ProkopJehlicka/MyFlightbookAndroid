			<CheckBox android:text="@string/lblFacebook" android:id="@+id/ckFacebook" android:drawableStart="@drawable/fb_f_logo" android:drawablePadding="20dip"
				android:layout_width="fill_parent" android:layout_height="wrap_content"></CheckBox>
			<CheckBox android:text="@string/lblTwitter" android:id="@+id/ckTwitter" android:drawableStart="@drawable/twitter_logo_blue" android:drawablePadding="20dip"
				android:layout_width="fill_parent" android:layout_height="wrap_content"></CheckBox>
			<CheckBox android:text="@string/lblMyFlightbook" android:id="@+id/ckMyFlightbook" android:drawableStart="@drawable/icon" android:drawablePadding="4dip"
				android:layout_width="fill_parent" android:layout_height="wrap_content"></CheckBox>
