					android:gravity="center_horizontal">
				</TextView>
				<Model.DecimalEdit mfb:EditMode="HHMM" android:id="@+id/txtTotal" android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="top"
					android:nextFocusLeft="@id/txtPIC">
