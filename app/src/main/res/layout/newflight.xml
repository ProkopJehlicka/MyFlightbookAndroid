			</LinearLayout>
			<Button android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="@string/lblProperties"
				android:layout_gravity="bottom" android:id="@+id/btnProps"
				android:gravity="center_vertical"></Button>
		</LinearLayout>
		<LinearLayout android:layout_width="fill_parent" android:padding="5dip"
		android:layout_height="wrap_content" android:orientation="vertical">
