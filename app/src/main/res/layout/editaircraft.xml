<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mfb="http://schemas.android.com/apk/res-auto"
	android:id="@+id/ScrollView01" android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="vertical">
		
		<!-- General aircraft information -->
		<TextView android:id="@+id/TextView01" android:text="@string/lblCatAircraftInfo"
			style="@style/DividerBar">
		</TextView>
		<TableLayout android:id="@+id/tblEditAircraft" android:padding="5dp"
			android:layout_width="fill_parent" android:layout_height="wrap_content">
			<TableRow android:id="@+id/TableRow01"
				android:layout_height="wrap_content" android:layout_width="fill_parent">
				<TextView android:text="@string/lblTail"
					android:layout_height="wrap_content" android:layout_width="wrap_content"
					android:width="100dip" android:layout_gravity="center_vertical">
				</TextView>
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textStyle="bold"
					android:layout_gravity="center_vertical" android:id="@+id/txtTailNumber">
				</TextView>
			</TableRow>
			<TableRow android:id="@+id/TableRow04"
				android:layout_height="wrap_content" android:layout_width="fill_parent">
				<TextView android:text="@string/lblAircraftType"
					android:layout_height="wrap_content" android:layout_width="wrap_content"
					android:layout_gravity="center_vertical">
				</TextView>
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical" android:id="@+id/txtAircraftType">
				</TextView>
			</TableRow>
			<TableRow android:id="@+id/TableRow05"
				android:layout_height="wrap_content" android:layout_width="fill_parent">
				<TextView android:text="@string/lblMakeModel"
					android:layout_width="wrap_content" android:width="100dip"
					android:layout_height="wrap_content" android:layout_gravity="center_vertical">
				</TextView>
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical" android:id="@+id/txtAircraftMakeModel">
				</TextView>
			</TableRow>
		</TableLayout>
		
		<CheckBox
		    android:id="@+id/ckHideAircraftFromSelection"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/lblShowAircraft" />
		
		<!-- Images -->
		<Gallery android:layout_width="fill_parent" android:layout_height="wrap_content" 
		android:id="@+id/galImages" android:spacing="4dip" >
		</Gallery>
		
		<!-- Aircraft Preferences -->
		<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center_vertical" android:padding="5dp">
			<TextView android:id="@+id/acPrefsHeader" android:text="@string/lblAircraftPrefsHeader"
				style="@style/DividerBar">
			</TextView>
			<RadioGroup android:id="@+id/rbgPilotRole" android:layout_width="wrap_content" android:layout_height="wrap_content">
				<RadioButton
				    android:id="@+id/rbRoleNone"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="@string/lblRoleNone" />
				<RadioButton
				    android:id="@+id/rbRolePIC"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="@string/lblRolePIC" />
				<RadioButton
				    android:id="@+id/rbRoleSIC"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="@string/lblRoleSIC" />
				<RadioButton
				    android:id="@+id/rbRoleCFI"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:text="@string/lblRoleCFI" />
			</RadioGroup>
		</LinearLayout>
		
		<!-- Notes -->
		<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center_vertical" android:padding="5dp">
			<TextView android:id="@+id/acNotesHeader" android:text="@string/lblNotesHeader"
				style="@style/DividerBar">
			</TextView>
			<TableLayout android:stretchColumns="1" android:padding="5dp" android:layout_width="fill_parent" android:layout_height="wrap_content">
			    <TableRow android:id="@+id/TableRowPublicNotes" android:layout_height="wrap_content" android:layout_width="fill_parent">
				<TextView android:text="@string/lblPublicNotes"
					android:layout_height="wrap_content" android:layout_width="wrap_content"
					android:layout_gravity="center_vertical">
				</TextView>
				<EditText android:id="@+id/txtPublicAircraftNotes"
				    android:inputType="textCapSentences|textAutoCorrect"
				     android:hint="@string/lblPublicNoteHint" android:layout_height="wrap_content" android:layout_width="fill_parent"></EditText>
		    </TableRow>
			<TableRow android:id="@+id/TableRowPrivateNotes" android:layout_height="wrap_content" android:layout_width="fill_parent">
				<TextView android:text="@string/lblPrivateNotes"
					android:layout_height="wrap_content" android:layout_width="wrap_content"
					android:layout_gravity="center_vertical">
				</TextView>
				<EditText android:id="@+id/txtPrivateAircraftNotes"
				    android:inputType="textCapSentences|textAutoCorrect"
				     android:hint="@string/lblPrivateNoteHint" android:layout_height="wrap_content" android:layout_width="fill_parent"></EditText>
		    </TableRow>
   			</TableLayout>
		</LinearLayout>
		
		<!-- Maintenance -->
		<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/sectMaintenance" android:orientation="vertical">
			<TextView android:id="@+id/TextView02" android:text="@string/lblCatMaintenance"
				style="@style/DividerBar">
			</TextView>
			<TextView android:text="@string/lblMaintPrompt"
				android:layout_width="fill_parent" android:layout_height="wrap_content">
			</TextView>
			<TableLayout android:padding="5dp"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<TableRow android:id="@+id/TableRow02"
					android:layout_height="wrap_content" android:layout_width="fill_parent">
					<TextView android:text="@string/lblVORCheck"
						android:layout_height="wrap_content" android:layout_width="wrap_content"
						android:width="100dip" android:layout_gravity="center_vertical">
					</TextView>
					<Button android:text="@string/lblTouchForToday" android:id="@+id/btnVORCheck"
						android:layout_width="wrap_content" android:layout_height="wrap_content">
					</Button>
				</TableRow>
				<TableRow android:id="@+id/TableRow03"
					android:layout_height="wrap_content" android:layout_width="fill_parent">
					<TextView android:text="@string/lblTransponder"
						android:layout_height="wrap_content" android:layout_width="wrap_content"
						android:width="100dip" android:layout_gravity="center_vertical">
					</TextView>
					<Button android:text="@string/lblTouchForToday" android:id="@+id/btnTransponder"
						android:layout_width="wrap_content" android:layout_height="wrap_content">
					</Button>
				</TableRow>
				<TableRow android:id="@+id/TableRow18"
					android:layout_height="wrap_content" android:layout_width="fill_parent">
					<TextView android:text="@string/lblPitotStatic"
						android:layout_height="wrap_content" android:layout_width="wrap_content"
						android:width="100dip" android:layout_gravity="center_vertical">
					</TextView>
					<Button android:text="@string/lblTouchForToday" android:id="@+id/btnPitotStatic"
						android:layout_width="wrap_content" android:layout_height="wrap_content">
					</Button>
				</TableRow>
				<TableRow android:id="@+id/TableRow15"
					android:layout_height="wrap_content" android:layout_width="fill_parent">
					<TextView android:text="@string/lblAltimeter"
						android:layout_height="wrap_content" android:layout_width="wrap_content"
						android:width="100dip" android:layout_gravity="center_vertical">
					</TextView>
					<Button android:text="@string/lblTouchForToday" android:id="@+id/btnAltimeter"
						android:layout_width="wrap_content" android:layout_height="wrap_content">
					</Button>
				</TableRow>
				<TableRow android:id="@+id/TableRow06"
					android:layout_height="wrap_content" android:layout_width="fill_parent">
					<TextView android:text="@string/lblELT"
						android:layout_height="wrap_content" android:layout_width="wrap_content"
						android:width="100dip" android:layout_gravity="center_vertical">
					</TextView>
					<Button android:text="@string/lblTouchForToday" android:id="@+id/btnELT"
						android:layout_width="wrap_content" android:layout_height="wrap_content">
					</Button>
				</TableRow>
				<TableRow android:id="@+id/TableRow07"
					android:layout_height="wrap_content" android:layout_width="fill_parent">
					<TextView android:text="@string/lblAnnual"
						android:layout_height="wrap_content" android:layout_width="wrap_content"
						android:width="100dip" android:layout_gravity="center_vertical">
					</TextView>
					<Button android:text="@string/lblTouchForToday" android:id="@+id/btnAnnual"
						android:layout_width="wrap_content" android:layout_height="wrap_content">
					</Button>
				</TableRow>
				<TableRow android:id="@+id/TableRow08"
					android:layout_height="wrap_content" android:layout_width="fill_parent">
					<TextView android:text="@string/lbl100Hour"
						android:layout_height="wrap_content" android:layout_width="wrap_content"
						android:width="100dip" android:layout_gravity="center_vertical">
					</TextView>
					<Model.DecimalEdit mfb:EditMode="DECIMAL" android:id="@+id/txt100hr" android:layout_width="fill_parent"
						android:layout_height="wrap_content">
					</Model.DecimalEdit>
				</TableRow>
				<TableRow android:id="@+id/TableRow09"
					android:layout_height="wrap_content" android:layout_width="fill_parent">
					<TextView android:text="@string/lblOilChange"
						android:layout_height="wrap_content" android:layout_width="wrap_content"
						android:width="100dip" android:layout_gravity="center_vertical">
					</TextView>
					<Model.DecimalEdit mfb:EditMode="DECIMAL" android:id="@+id/txtOilChange"
						android:layout_width="fill_parent" android:layout_height="wrap_content">
					</Model.DecimalEdit>
				</TableRow>
				<TableRow android:id="@+id/TableRow10"
					android:layout_height="wrap_content" android:layout_width="fill_parent">
					<TextView android:text="@string/lblNewEngine"
						android:layout_height="wrap_content" android:layout_width="wrap_content"
						android:width="100dip" android:layout_gravity="center_vertical">
					</TextView>
					<Model.DecimalEdit mfb:EditMode="DECIMAL" android:id="@+id/txtNewEngine"
						android:layout_width="fill_parent" android:layout_height="wrap_content">
					</Model.DecimalEdit>
				</TableRow>
				<TableRow android:id="@+id/TableRow11"
					android:layout_height="wrap_content" android:layout_width="fill_parent">
					<TextView android:text="@string/lblRegistration"
						android:layout_height="wrap_content" android:layout_width="wrap_content"
						android:width="100dip" android:layout_gravity="center_vertical">
					</TextView>
					<Button android:text="@string/lblTouchForToday" android:id="@+id/btnRegistration"
						android:layout_width="wrap_content" android:layout_height="wrap_content">
					</Button>
				</TableRow>
			</TableLayout>
		</LinearLayout>
	</LinearLayout>
</ScrollView>
